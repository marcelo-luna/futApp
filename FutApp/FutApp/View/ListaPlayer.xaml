<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FutApp.View.ListaPlayer" Title="Jogadores">
  <ContentPage.Content>
    <StackLayout Padding="25">
      <ListView ItemsSource="{Binding Player}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <SwitchCell Text="{Binding Name}" On="{Binding Status}" OnChanged="Cell_OnTapped">
              <SwitchCell.ContextActions>
                <MenuItem Text="Mais" ></MenuItem>
                <MenuItem Text="Delete" ></MenuItem>
              </SwitchCell.ContextActions>
            </SwitchCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>