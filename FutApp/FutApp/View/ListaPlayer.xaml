<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FutApp.View.ListaPlayer" Title="Jogadores">
  <ContentPage.Content>
    <StackLayout Padding="25">
      <ListView ItemsSource="{Binding Player}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Horizontal">
                <Label Text="Jogador"></Label>
                <Label x:Name="PlayerName" Text="{Binding Name}"></Label>
              <Switch x:Name="PlayerStatus" IsToggled="{Binding Status}"></Switch>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>